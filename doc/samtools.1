.TP 10 \"-------- reset
.B reset
samtools reset
.RB [ -o
.IR FILE ]
.RB [ -x / --remove-tag
.IR tag_list ]
.RB [ --keep-tag
.IR tag_list ]
.RB [  --reject-PG
.IR pgid ]
.RB [ --no-RG ]
.RB [ --no-PG ]
