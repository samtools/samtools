.B ampliconclip
samtools ampliconclip
.RB [ -o
.IR out.file ]
.RB [ -f
.IR stat.file ]
.RB [ --soft-clip ]
.RB [ --hard-clip ]
.RB [ --both-ends ]
.RB [ --strand ]
.RB [ --clipped ]
.RB [ --fail ]
.RB [ --no-PG ]
